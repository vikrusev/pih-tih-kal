{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug App Dev",
            "program": "${workspaceRoot}/backend/app.ts",
            "preLaunchTask": "ts-to-js",
            "outFiles": [
                "${workspaceFolder}/backend/app/**/*.js"
            ],
            "cwd": "${workspaceRoot}/backend",
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "dev",
                "PORT": "3000"
            },
            "serverReadyAction": {
                "pattern": "listening on.* ([0-9]+)",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally",
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug App Prod",
            "program": "${workspaceRoot}/backend/app.ts",
            "preLaunchTask": "ts-to-js",
            "outFiles": [
                "${workspaceFolder}/backend/public/**/*.js"
            ],
            "cwd": "${workspaceRoot}/backend",
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "prod",
                "PORT": "3000"
            },
            "serverReadyAction": {
                "pattern": "listening on.* ([0-9]+)",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally",
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current file",
            "program": "${file}",
            "args": [
                "-i"
            ],
            "env": {
                "NODE_ENV": "dev"
            }
        }
    ]
}