{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "noEmitOnError": true,
    "removeComments": false,
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "typeRoots": [
      "./common/@types"
    ],
    "paths": {
      "*": [
        "./common/*"
      ]
    },
    "resolveJsonModule": true
  },
  "exclude": [
    "./frontend/src/angular_js",
    "./frontend/node_modules",
    "./backend/node_modules",
    "**/*.spec.ts"
  ]
}