{
    "compileOnSave": false,
    "compilerOptions": {
        "noImplicitAny": false,
        "baseUrl": "./",
        "outDir": "./public",
        "sourceMap": true,
        "declaration": false,
        "module": "CommonJS",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./globals/typings",
            "../common/@types",
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "include": [
        "../**/*.ts"
    ],
    "exclude": [
        "../frontend/*"
    ]
}